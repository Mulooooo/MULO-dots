# duplicate screen
bindsym $mod+m exec --no-startup-id \
    xrandr --setprovideroutputsource 1 0 && \
    xrandr --output eDP-1 --primary --mode 2560x1600 --pos 0x0 --rotate normal \
           --output HDMI-1-0 --mode 1920x1080 --right-of eDP-1 --rotate normal
bindsym $mod+n exec --no-startup-id xrandr --setprovideroutputsource 1 0 && xrandr --output $screen --rotate normal --output $screen2 --rotate normal --rate 60 # && feh --no-fehbg --bg-fill $wallpaper NO WALLPAPER !

bindsym $mod+Shift+m exec --no-startup-id \
    xrandr --output eDP-1 --auto --output HDMI-1-0 --auto --same-as eDP-1

